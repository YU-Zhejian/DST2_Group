#!/usr/bin/env bash
# CONFIGURE v1
set -eu
DN="$(readlink -f "$(dirname "${0}")")"
cd "${DN}"
rm -rf etc/path.sh
mkdir -p etc
for PROGNAME in aria2c ascp axel wget \
fastqc cutadapt \
hisat2 \
bsub ylsjs \
;do
	printf "Locating ${PROGNAME}...\n"
	x=$(which "${PROGNAME}" &>> /dev/null && echo "true" || echo "false")
	echo "my${PROGNAME}=${x}" >> etc/path.sh
done
